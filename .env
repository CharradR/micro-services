# Environment Configuration for Microservices

# Database Configuration
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=rootpassword
MONGO_DATABASE=librarydb
MONGO_LIBRARY_USER=libraryuser
MONGO_LIBRARY_PASSWORD=librarypass

# Keycloak Configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123
KEYCLOAK_REALM=microservices-realm
KEYCLOAK_CLIENT_ID=gateway-client

# Service Ports
CONFIG_SERVER_PORT=8889
EUREKA_SERVER_PORT=8761
GATEWAY_PORT=8083
LIBRARY_SERVICE_PORT=8081
KEYCLOAK_PORT=8080
KEYCLOAK_ADMIN_PORT=9000
FRONTEND_PORT=4200
MONGODB_PORT=27017

# Service URLs
EUREKA_SERVER_URL=http://eureka-server:8761/eureka
CONFIG_SERVER_URL=http://config-server:8889
KEYCLOAK_AUTH_URL=http://keycloak:8080

# Spring Profiles
SPRING_PROFILES_ACTIVE=docker

# Network Configuration
DOCKER_NETWORK_SUBNET=172.20.0.0/16

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=5
